# 图片生成性能优化配置
# 复制此文件到 .env.local 并根据需要调整配置

# Google API 配置
GOOGLE_API_KEY=your_google_api_key_here

# 图片生成性能配置
IMAGE_GEN_API_TIMEOUT=30000          # API超时时间（毫秒），默认30秒
IMAGE_GEN_MAX_RETRIES=2              # 最大重试次数，默认2次
IMAGE_GEN_ENABLE_CACHE=true          # 是否启用缓存，默认true
IMAGE_GEN_MAX_IMAGE_SIZE=5242880     # 最大图片大小（字节），默认5MB

# 缓存配置
CACHE_EXPIRY=86400000                # 缓存过期时间（毫秒），默认24小时
MAX_CACHE_SIZE=100                   # 最大缓存大小（MB），默认100MB

# 监控配置
ENABLE_DETAILED_LOGGING=true         # 是否启用详细日志
LOG_SLOW_REQUESTS=true               # 是否记录慢请求
SLOW_REQUEST_THRESHOLD=5000          # 慢请求阈值（毫秒），默认5秒

# 图片压缩配置
ENABLE_COMPRESSION=true              # 是否启用图片压缩
COMPRESSION_QUALITY=0.8              # 压缩质量 (0-1)，默认0.8
